<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.gme"
  version="1.1.0"
  name="GME Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="gme"
    extension=".gbs|.spc|.nsf|.vgm|.kss|.hes|.ay|.sap|.sgc|.gmestream"
    tags="true"
    tracks="true"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Game Music Emu Audio Decoder</summary>
    <description lang="en">Game Music Emu Audio Decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
