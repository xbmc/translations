<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.xtv-saf" version="1.3.1" name="xTV-SAF"	provider-name="Wyrm">
	<requires>
		<import addon="xbmc.gui" version="4.0.0"/>
		<import addon="script.xbmc.debug.log" version="11.0.6"/>
		<import addon="script.favourites" version="3.2.5" optional="true"/>
		<import addon="script.playalbum" version="0.0.6" optional="true"/>
		<import addon="script.artwork.downloader" version="1.0.1" optional="true"/>
		<import addon="script.globalsearch" version="0.1.7" optional="true"/>
		<import addon="script.tvtunes" version="1.0.1" optional="true"/>
		<import addon="script.cinema.experience" version="0.1.7" optional="true"/>
		<import addon="script.artistslideshow" version="1.3.0" optional="true"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1" debugging="false">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p"/>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">A family friendly remake of CHI3f's xTV skin</summary>
		<description lang="en">xTV-SAF is a 'Front Row' like skin for XBMC. It provides a number of updated features not available in the original AppleTV interface and builds on CHI3f's xTV skin to include new features of XBMC Eden. All this in a simple, Spouse Acceptable form (Factor) that is easy for kids and adults to find what they are looking for.</description>
		<platform>all</platform>
	</extension>
</addon>
