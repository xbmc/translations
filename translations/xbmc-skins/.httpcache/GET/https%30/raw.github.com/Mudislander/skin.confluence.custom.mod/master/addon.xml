<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.confluence.custom.mod"
  version="3.0.9"
  name="CCM Helix"
  provider-name="Mudislander">
  <requires>
    <import addon="xbmc.gui" version="5.3.0"/>
	<import addon="script.favourites" version="6.0.1"/>
	<import addon="script.randomandlastitems" version="2.2.0"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Mudislander's MOD of Confluence skin originally by Jezz_X.</summary>
    <description lang="en">CCM is Mudislander's MOD of Confluence to enable a greater degree of user customisation to the default skin.</description>
    <disclaimer lang="en">You break it - You get to keep the pieces</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
